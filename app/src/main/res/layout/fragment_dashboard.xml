<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".fragments.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/knjizenjeDashBtn"
                    android:text="KnjiÅ¾enje"
                    style="@style/materialButtonDashboard"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/zastojiDashBtn"
                    android:text="Zastoji"
                    style="@style/materialButtonDashboard"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/rezervniDeliDashBtn"
                    android:text="Rezervni deli"
                    style="@style/materialButtonDashboard"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/preventivniPreglediDashBtn"
                    android:text="Preventivni pregledi"
                    style="@style/materialButtonDashboard"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/imenikDashBtn"
                    android:text="Imenik"
                    style="@style/materialButtonDashboard"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/nalogeDashBtn"
                    android:text="Naloge"
                    style="@style/materialButtonDashboard"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/remontiDashBtn"
                    android:text="Remonti"
                    style="@style/materialButtonDashboard"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/orodjaDashBtn"
                    android:text="Orodja"
                    style="@style/materialButtonDashboard"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registerDashBtn"
                    android:text="Register"
                    style="@style/materialButtonDashboard"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/testDashBtn"
                    android:text="test"
                    style="@style/materialButtonDashboard"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>