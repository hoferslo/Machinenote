<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.NalogeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_corners_100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal"
                    android:background="@drawable/background_corners_25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:text="Ime Naloge"/>

                    <TextView
                        android:id="@+id/dutyName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginVertical="4dp"

                    android:orientation="horizontal"
                    android:background="@drawable/background_corners_25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"

                        android:text="Opis"/>

                    <TextView
                        android:id="@+id/nameOfShipper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lineargmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal"
                    android:background="@drawable/background_corners_25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"

                        android:text="Rok za izvedbo"/>

                    <TextView
                        android:id="@+id/dateOfDeadline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearGSM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal"
                    android:background="@drawable/background_corners_25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:text="Datum zaključka"/>

                    <TextView
                        android:id="@+id/dateOfEnd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearTelephoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:background="@drawable/background_corners_25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"

                        android:text="Komentar"/>

                    <TextView
                        android:id="@+id/comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sendGmail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:gravity="center"
                android:layout_marginStart="16dp"

                android:visibility="gone"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:padding="0dp"
            android:background="@drawable/background_corners_25">

            <EditText
                android:id="@+id/idOfDuty"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="0.8"
                android:textSize="24sp"
                android:padding="8dp"
                android:drawableLeft="@mipmap/search"
                android:drawablePadding="8dp"
                android:hint="Poišči nalogo"
                android:background="@drawable/customborder"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:paddingVertical="8dp"
            android:layout_weight="1"
            android:background="@drawable/background_corners_100"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/dataOfDuty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/listViewDuty"
                        android:background="@drawable/background_corners_25"
                        />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:singleSelection="true">
            <Button
                android:id="@+id/tabStoppage"
                android:gravity="center"
                android:text="@string/tab_for_inserting_data"
                style="@style/materialButtonToggle"
                />

            <Button
                android:id="@+id/tabPictures"
                android:gravity="center"
                android:text="@string/tab_for_pictures"
                style="@style/materialButtonToggle"
                />

            <Button
                android:id="@+id/tabInfo"
                android:layout_width="0dp"
                android:gravity="center"
                android:text="@string/tab_for_info"
                style="@style/materialButtonToggle"
                />
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </LinearLayout>

</LinearLayout>