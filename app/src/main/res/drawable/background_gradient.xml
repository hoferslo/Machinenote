<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer layer with gradient border -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primaryColor_50"
                android:endColor="@color/primaryColor_100"
                android:angle="-90" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Inner layer to create the inner area -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primaryColor_25"
                android:endColor="@color/white"
                android:angle="-90" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>
