<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MachineNote" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor_500</item>
        <item name="colorPrimaryVariant">@color/primaryColor_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor_200</item>
        <item name="colorSecondaryVariant">@color/secondaryColor_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:windowBackground">@color/primaryColor_50</item>

    </style>

    <style name="materialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="backgroundTint">@null</item> <!-- Set to null to avoid tinting issues -->
        <item name="cornerRadius">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="elevation">0dp</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="materialButtonToggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:backgroundTint">@drawable/togglebtn_25</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="materialButtonDashboard" parent="materialButton">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/primaryColor_25</item> <!-- Change accent color -->
        <item name="android:windowBackground">@drawable/customborder_25</item> <!-- Custom background drawable -->

        <item name="android:textColorAlertDialogListItem">@color/black</item>
    </style>

</resources>

