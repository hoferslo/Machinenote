<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MachineNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor_500</item>
        <item name="colorPrimaryVariant">@color/primaryColor_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor_200</item>
        <item name="colorSecondaryVariant">@color/secondaryColor_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@android:color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.MachineNote" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="materialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColor_200</item>
        <!-- Button corner radius -->
        <item name="cornerRadius">4dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="materialButtonToggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:backgroundTint">@drawable/togglebtn_25</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="materialButtonDashboard" parent="materialButton">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

    </style>

</resources>

